                description: 'Ibrido sterile - pi√π comune dei bardotti'
            },
            'giumenta+asino_m': {
                name: 'Mulo', nameEn: 'Mule', icon: 'üê¥',
                chromosomes: 63, fertile: false, type: 'hybrid',
                description: 'Ibrido sterile - pi√π comune dei bardotti'
            },
            'cavallo_m+asina': {
                name: 'Bardotto', nameEn: 'Hinny', icon: 'üê¥',
                chromosomes: 63, fertile: false, type: 'hybrid',
                description: 'Ibrido sterile - meno comune dei muli'
            },
            'asina+cavallo_m': {
                name: 'Bardotto', nameEn: 'Hinny', icon: 'üê¥',
                chromosomes: 63, fertile: false, type: 'hybrid',
                description: 'Ibrido sterile - meno comune dei muli'
            }
        };

        let selectedAnimals = [null, null];
        
        // Gestione selezione animali
        document.addEventListener('DOMContentLoaded', function() {
            const selectors = document.querySelectorAll('.animal-selector');
            
            selectors.forEach((selector, selectorIndex) => {
                const options = selector.querySelectorAll('.animal-option');
                
                options.forEach(option => {
                    option.addEventListener('click', function() {
                        // Rimuovi selezione precedente in questo selettore
                        options.forEach(opt => opt.classList.remove('selected'));
                        
                        // Aggiungi selezione corrente
                        this.classList.add('selected');
                        
                        // Salva selezione
                        selectedAnimals[selectorIndex] = this.dataset.animal;
                        
                        // Calcola risultato se entrambi selezionati
                        if (selectedAnimals[0] && selectedAnimals[1]) {
                            calculateResult();
                        }
                    });
                });
            });
        });

        function calculateResult() {
            const [parent1, parent2] = selectedAnimals;
            const key1 = `${parent1}+${parent2}`;
            const key2 = `${parent2}+${parent1}`;
            
            // Cerca il risultato in entrambe le direzioni
            let result = breedingResults[key1] || breedingResults[key2];
            
            if (!result) {
                // Casi particolari - stesso sesso
                const animal1 = animals[parent1];
                const animal2 = animals[parent2];
                
                if (animal1.gender === animal2.gender) {
                    showError('‚ö†Ô∏è Accoppiamento impossibile: stesso sesso!');
                    return;
                }
                
                showError('‚ùå Combinazione non riconosciuta');
                return;
            }
            
            displayResult(result, animals[parent1], animals[parent2]);
        }

        function displayResult(result, parent1, parent2) {
            const resultArea = document.getElementById('resultArea');
            const isHybrid = result.type === 'hybrid';
            
            resultArea.className = `result-area show-result ${isHybrid ? 'hybrid' : ''}`;
            
            resultArea.innerHTML = `
                <div class="result-icon">${result.icon}</div>
                <div class="result-name">${result.name}</div>
                <div class="result-name-en">${result.nameEn}</div>
                
                <div class="result-details">
                    <div class="detail-card">
                        <div class="detail-title">Cromosomi</div>
                        <div class="detail-value">${result.chromosomes}</div>
                    </div>
                    <div class="detail-card">
                        <div class="detail-title">Tipo</div>
                        <div class="detail-value">${result.type === 'purebred' ? 'Razza Pura' : 'Ibrido'}</div>
                    </div>
                    <div class="detail-card">
                        <div class="detail-title">Genitori</div>
                        <div class="detail-value">${parent1.chromosomes} + ${parent2.chromosomes}</div>
                    </div>
                </div>
                
                <div class="fertility-badge ${result.fertile ? 'fertile' : 'sterile'}">
                    ${result.fertile ? '‚úì FERTILE' : '‚úó STERILE'}
                </div>
                
                <p style="margin-top: 15px; font-size: 14px; opacity: 0.8;">
                    ${result.description}
                </p>
                
                <button class="reset-btn" onclick="resetSelection()">
                    üîÑ Nuova Combinazione
                </button>
            `;
        }

        function showError(message) {
            const resultArea = document.getElementById('resultArea');
            resultArea.className = 'result-area';
            resultArea.innerHTML = `
                <div class="instructions">
                    <h3>${message}</h3>
                    <button class="reset-btn" onclick="resetSelection()">
                        üîÑ Riprova
                    </button>
                </div>
            `;
        }

        function resetSelection() {
            selectedAnimals = [null, null];
            document.querySelectorAll('.animal-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            const resultArea = document.getElementById('resultArea');
            resultArea.className = 'result-area';
            resultArea.innerHTML = `
                <div class="instructions">
                    <div style="font-size: 50px; margin-bottom: 20px;">üéØ</div>
                    <h3>Pronto per scoprire il risultato!</h3>
                    <p style="margin: 15px 0;">Seleziona <strong>un animale dalla sezione A</strong> e <strong>uno dalla sezione B</strong></p>
                    <div style="background: rgba(0,123,255,0.1); padding: 15px; border-radius: 10px; margin-top: 20px;">
                        <strong>üí° Suggerimento:</strong> Passa il mouse sui pulsanti per vedere che sono cliccabili!
                    </div>
                </div>
            `;
        }
    </script>
</body>
</html>breeding app"
